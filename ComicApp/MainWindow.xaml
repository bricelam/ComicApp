<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="ComicApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="using:ComicApp"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ComicApp">

  <Window.SystemBackdrop>
    <MicaBackdrop />
  </Window.SystemBackdrop>

  <!-- TODO: Allow drop -->
  <Grid AllowDrop="True"
        DragOver="HandleDragOver"
        Drop="HandleDrop">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <StackPanel HorizontalAlignment="Center">
      <TextBlock Text="{x:Bind _comicBook.Title}" />
    </StackPanel>
    <ScrollViewer Name="_scrollViewer"
                  Grid.Row="1"
                  HorizontalScrollBarVisibility="Auto"
                  MaxZoomFactor="1.0"
                  SizeChanged="HandleSizeChanged"
                  ZoomMode="Enabled">
      <Image Name="_image"
             HorizontalAlignment="Center"
             VerticalAlignment="Top"
             PointerPressed="HandlePointerPressed"
             PointerWheelChanged="HandlePointerWheelChanged"
             Source="{x:Bind ImageSource,Mode=OneWay}" />
    </ScrollViewer>
    <StackPanel Grid.Row="2"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
      <Button Click="HandlePrevious">Previous</Button>
      <TextBlock>Page: <Run Text="{x:Bind CurrentPage,Mode=OneWay}" /> of <Run Text="{x:Bind _comicBook.Pages.Count,Mode=OneWay}" /></TextBlock>
      <Button Click="HandleNext">Next</Button>
    </StackPanel>
  </Grid>
</Window>
